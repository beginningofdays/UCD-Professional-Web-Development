---
import Layout from '../layouts/layout.astro';
const name ="Astro";  //variable 
const style = 'purple';  //variable
const users = ['Astro', 'Remy', 'kelsey', 'brad']; //array
const response = await fetch('https://jsonplaceholder.typicode.com/users?_limit=10');
const users1 = await response.json();
const visible = true; //boolean
--- 
          
<Layout>  <!-- Header Section-->
        <h1 class={style}>Hello, World!</h1>
        <ul>
            {users.map(user => <li>{user}</li>)}
        </ul>
        
        <ul>
            {users1.map(user1s => <li>{user1s.name}</li>)}
        </ul>

        {visible && <p>I am visible</p>}
</Layout>


<script>
    var map = L.map('map').setView([51.505, -0.09], 16);
    
    L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
    }).addTo(map);
    
    L.marker([51.5, -0.09]).addTo(map)
        .bindPopup('A pretty CSS popup.<br> Easily customizable.')
        .openPopup();
    </script>

<style>
    h1{
        color:orange;
    }
    .purple { 
        color:purple;
    }
</style>